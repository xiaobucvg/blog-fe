{@each list as item}
<div class="item">
    <a href="./detail.html?id=${item.id}" class="link text-body">
        <h4 class="title font-weight-bold mb-2">
            ${item.title}
        </h4>
        <div class="abstract font-italic text-secondary mb-2">
            $${item.abstractInfo}
        </div>
    </a>
    <div class="date text-secondary">
        发布于 : ${item.createTime}
    </div>
</div>
{@/each}